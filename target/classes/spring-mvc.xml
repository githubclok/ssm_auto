<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--  SpringMVC的配置文件，包含网站跳转逻辑的控制，配置-->
    <!--  禁用默认扫描过滤器  -->
    <context:component-scan base-package="kulo.sgg" use-default-filters="false">
        <!-- 配置成仅扫描controller注解-->
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--  两个标准配置   -->
    <!--  将Springmvc 不能处理的请求交给tomcat  -->
    <mvc:default-servlet-handler/>
    <!--  能支持springmvc更高级的一些功能，JSR303校验，快捷的ajax...  -->
    <mvc:annotation-driven/>

    <bean id="dealer1" class="kulo.sgg.entity.RmDealerInfoEntity">
        <property name="blackFlag" value="1"/>
        <property name="dealerId" value="1"/>
        <property name="dealerName" value="Audi"/>
        <property name="note" value="test"/>
    </bean>

<!--    <bean id="dealer2" class="kulo.sgg.entity.RmDealerInfoEntity">-->
<!--        <property name="blackFlag" value="2"/>-->
<!--        <property name="dealerId" value="2"/>-->
<!--        <property name="dealerName" value="BMW"/>-->
<!--        <property name="note" value="test"/>-->
<!--    </bean>-->

<!--    bean 配置的继承-->
    <bean id="dealer2" class="kulo.sgg.entity.RmDealerInfoEntity" p:blackFlag="0" parent="dealer1"/>

    <bean id="person" class="kulo.sgg.Person">
        <property name="age" value="26"/>
        <property name="name" value="sxy"/>
        <property name="dealers">
            <list>
                <ref bean="dealer1"/>
                <ref bean="dealer2"/>
            </list>
        </property>
    </bean>

</beans>